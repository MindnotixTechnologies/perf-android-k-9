abiChange {
  tasks = ["assembleDebug"]
  apply-abi-change-to = "plugins/openpgp-api-lib/openpgp-api/src/main/java/org/openintents/openpgp/OpenPgpError.java"
}

androidManifestChange {
  tasks = ["assembleDebug"]
  apply-android-manifest-change-to = "plugins/openpgp-api-lib/openpgp-api/src/main/AndroidManifest.xml"
}

androidResourceChange {
    tasks = ["assembleDebug"]
    apply-android-resource-change-to = "plugins/openpgp-api-lib/openpgp-api/src/main/res/values/strings.xml"
}

classpathResourceChange {
    tasks = ["assembleDebug"]
    apply-property-resource-change-to = "plugins/openpgp-api-lib/openpgp-api/src/main/resources/app.properties"
}

upToDateSingleVariant {
  tasks = ["assembleDebug"]
}

rebuildSingleVariant {
  cleanup-tasks = ["clean"]
  tasks = ["assembleDebug"]
}

upToDateAllVariants {
  tasks = ["assemble"]
  gradle-args = ["-x", "lintVitalRelease"]
}

rebuildAllVariants {
  cleanup-tasks = ["clean"]
  tasks = ["assemble"]
  gradle-args = ["-x", "lintVitalRelease"]
}

help {
  tasks = ["help"]
}
